{
    "manifest_version": 2,
    "name": "네이버 중국어사전",
    "description": "네이버 중국어 사전 크롬 익스텐션 (비공식)",
    "version": "2.0.1",
    "homepage_url": "https://github.com/pelogvc/chinese-dictionary-chrome-extension-v2",
    "browser_action": {
        "default_icon": "assets/128.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "lib/dexie.js",
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "http://*/*", 
        "https://*/*",
        "storage"
    ],
    "content_scripts": [
        {
            "all_frames": true,
            "js": [ 
                "main.js"
            ],
            "css" : [
                "main.css"
            ],
            "matches": [ 
                "http://*/*", 
                "https://*/*"
            ]
        }
    ], 
    "web_accessible_resources": [
        "main.css"
    ]
}